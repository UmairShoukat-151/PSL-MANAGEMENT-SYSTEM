<script>
  document.addEventListener("DOMContentLoaded", function () {
    const playersLink = document.getElementById("playersLink");
    const playersDropdown = document.getElementById("playersDropdown");

    // Show the dropdown on hover
    playersLink.addEventListener("mouseenter", function () {
      playersDropdown.classList.remove("hidden");
    });

    // Hide the dropdown when clicking elsewhere on the page
    document.addEventListener("click", function (event) {
      if (!playersLink.contains(event.target)) {
        playersDropdown.classList.add("hidden");
      }
    });
  });
</script>
